{
    "liveSassCompile.settings.formats": [
        // You can add more
        {
            "savePath": "/docs/styles/css"
        }
    ],
    "eslint.validate": [
        {
            "language": "vue",
            "autoFix": true
        },
        {
            "language": "javascript",
            "autoFix": true
        },
        {
            "language": "javascriptreact",
            "autoFix": true
        }
    ],
    "eslint.autoFixOnSave": true,
    "editor.formatOnSave": false,
    "vetur.validation.template": false,
    // Exclude (hide) files / folders in search in Vscode
    "search.exclude" : {
        "node_modules/": true,
        "docs/": true,
        "pnpm-lock.yaml": true
    },
    // Exclude (hide) files / folders in Vscode
    "files.exclude" : {
        "node_modules/": true
    }
}